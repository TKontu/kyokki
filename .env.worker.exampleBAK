# --- Celery Worker Environment ---
# The worker uses network_mode: "host", so it connects to services via localhost.

# PostgreSQL
POSTGRES_SERVER=localhost
POSTGRES_USER=fridge_user
POSTGRES_PASSWORD=supersecretpassword
POSTGRES_DB=fridge_logger

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379

# Ollama
# This MUST be the IP address of the machine running Ollama on your local network.
OLLAMA_HOST=http://<IP_OF_OLLAMA_MACHINE>:11434
